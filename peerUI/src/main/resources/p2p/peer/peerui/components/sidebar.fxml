<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox minWidth="250" prefWidth="280" styleClass="sidebar" stylesheets="@../styles/application.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="p2p.peer.peerui.components.SidebarController">

    <!-- Search Bar -->
    <HBox alignment="CENTER_LEFT" spacing="8" styleClass="sidebar-search">
        <padding>
            <Insets bottom="12" left="12" right="12" top="12" />
        </padding>
        <TextField fx:id="searchField" promptText="Search users..." HBox.hgrow="ALWAYS" />
        <Button fx:id="searchButton" onAction="#onSearch" styleClass="button-secondary, search-icon-button" text="ðŸ”" />
    </HBox>

    <!-- Tab Buttons -->
    <HBox alignment="CENTER" spacing="0" styleClass="sidebar-tabs">
        <padding>
            <Insets bottom="8" left="12" right="12" top="0" />
        </padding>
        <ToggleButton fx:id="friendsTab" maxWidth="Infinity" onAction="#onFriendsTabSelected" styleClass="sidebar-tab" text="ðŸ‘¥ Friends" HBox.hgrow="ALWAYS" />
        <ToggleButton fx:id="groupsTab" maxWidth="Infinity" onAction="#onGroupsTabSelected" styleClass="sidebar-tab" text="ðŸ’¬ Groups" HBox.hgrow="ALWAYS" />
    </HBox>

    <!-- Contact List -->
    <ListView fx:id="contactList" styleClass="contact-list" VBox.vgrow="ALWAYS" />

    <!-- Pending Section -->
    <VBox fx:id="pendingSection" managed="false" spacing="8" styleClass="pending-section" visible="false">
        <padding>
            <Insets bottom="12" left="12" right="12" top="12" />
        </padding>
        <Separator />
        <HBox alignment="CENTER_LEFT" spacing="8">
            <Label styleClass="pending-title" text="ðŸ“© Pending" />
            <Label fx:id="pendingBadge" styleClass="unread-badge" />
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#onViewPending" styleClass="button-secondary" text="View" />
        </HBox>
    </VBox>

    <!-- New Group Button -->
    <HBox alignment="CENTER" styleClass="sidebar-footer">
        <padding>
            <Insets bottom="12" left="12" right="12" top="12" />
        </padding>
        <Button fx:id="newGroupButton" maxWidth="Infinity" onAction="#onNewGroup" styleClass="button-secondary" text="+ New Group" HBox.hgrow="ALWAYS" />
    </HBox>
</VBox>
